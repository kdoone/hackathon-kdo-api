{
    "name": "node-express-typescript-starter",
    "version": "1.0.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "author": "Sanzhar Shakhmerden",
    "license": "ISC",
    "scripts": {
        "start": "npm run serve",
        "build": "rm -rf dist && npm run build-ts && npm run lint && npm run copy-static-assets",
        "serve": "pm2 start dist/server.js",
        "stop": "pm2 stop dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\" ",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "migrate": "cd migrations/mongo && migrate-mongo",
        "restore": "mongorestore -d boom-brains --drop dumps/boom-brains/",
        "copy-static-assets": "rm -rf dist/public && ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js"
    },
    "dependencies": {
        "@types/jsonwebtoken": "^8.3.4",
        "@types/passport-jwt": "^3.0.2",
        "async": "^3.1.0",
        "bcrypt-nodejs": "^0.0.3",
        "bluebird": "^3.5.5",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.0.0",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^8.1.0",
        "ejs": "^2.7.1",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-jwt": "^6.0.0",
        "express-session": "^1.16.2",
        "express-validator": "^6.2.0",
        "fbgraph": "^1.4.4",
        "generate-password": "^1.4.2",
        "http-errors": "^1.7.3",
        "i18n": "^0.8.4",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "lusca": "^1.6.1",
        "migrate-mongo": "^6.0.2",
        "moment": "^2.24.0",
        "mongoose": "^5.7.1",
        "node-fetch": "^2.6.0",
        "nodemailer": "^6.3.0",
        "passport": "^0.4.0",
        "passport-facebook": "^3.0.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pug": "^2.0.4",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "trim-request": "^1.0.6",
        "uuid": "^3.3.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^3.0.2",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.27",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
